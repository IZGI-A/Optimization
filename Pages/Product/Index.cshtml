                @Html.DisplayNameFor(Model => Model.Product.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BranchID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                
                <a asp-page-handler="Edit" class="btn btn-success" asp-route-id="@item.ID" asp-route-branchID="@item.BranchID">Edit</a> |
                <a asp-page-handler="Details" class="btn btn-info" style="color:white;" asp-route-id="@item.ID" asp-route-branchID="@item.BranchID">Details</a> |
                <a asp-page-handler="Delete"  class="btn btn-danger" asp-route-id="@item.ID" asp-route-branchID="@item.BranchID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
