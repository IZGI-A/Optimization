@page
@model optimization.Pages.Employee.DeleteModel
@{
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this employee?</h3>
<div>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(Model => Model.Employee.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(Model => Model.Employee.Email)
        </dd>
    </dl>
    @if(@Model.message != null)
    {
        <span class="text-danger">@Model.message</span>
    }

    <form method="post">
        <input type="hidden" asp-for="@Model.Employee.ID" />
        <input type="hidden" asp-for="@Model.Employee.Email" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page-handler="Index">Back to List</a>
    </form>
</div>
