@page
@model optimization.Pages.Account.LoginModel
@{
}

<h1>Login</h1>
<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQGEhTUUzuq3uHN5AwQXVGXRO7hnGUlT1ZvPQ&usqp=CAU"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form method="post">
          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3">Vilinze authentication</p>
            
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <label asp-for="Credential.Email" class="form-label"></label>
            <input type="email"  asp-for="Credential.Email" class="form-control form-control-lg"/>
            <span class="text-danger" asp-validation-for="Credential.Email"></span>
          </div>
          <!-- Password input -->
          <div class="form-outline mb-3">
            <label  asp-for="Credential.Password" class="form-label"></label>
            <input type="password" asp-for="Credential.Password" class="form-control form-control-lg"/>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
          </div>
          @if(@Model.message != null)
                    {
                        <span class="text-danger">@Model.message</span>
                    }

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">
              <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
              <label class="form-check-label" for="form2Example3">
                Remember me
              </label>
            </div>
            <a href="?#" class="text-body">Forgot password?</a>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submit" class="btn btn-warning"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
            <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/Account/SignUp"
                class="link-danger">Register</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>

</section>