<h1>Orders</h1>

<p>
    <a asp-page-handler="Create" class="btn btn-outline-info">Create New </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(Model => Model.Order.ID)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Order.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Order.NumberOfProducts)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Order.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Order.CourierCompany)
            </th>
            <th>
                @Html.DisplayNameFor(Model => Model.Order.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Orders) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfProducts)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourierCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-page-handler="Edit" class="btn btn-success"  asp-route-id="@item.ID" asp-route-productID="@item.ProductID" asp-route-customerID="@item.CustomerID">Edit</a> |
                <a asp-page-handler="Details" class="btn btn-info" style="color:white;" asp-route-id="@item.ID" asp-route-productID="@item.ProductID" asp-route-customerID="@item.CustomerID">Details</a> |
                <a asp-page-handler="Delete"  class="btn btn-danger"  asp-route-id="@item.ID" asp-route-productID="@item.ProductID" asp-route-customerID="@item.CustomerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
